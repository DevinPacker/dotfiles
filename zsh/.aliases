# git
alias tiga='tig --all'

# docker / docker-compose
alias dca='docker-compose down && docker-compose build && docker-compose up'
alias dcb='docker-compose build'
alias dcd='docker-compose down'
alias dcu='docker-compose up'

# System / Miscellaneous
alias mem='free -ht'
alias myip='curl https://api.ipify.org; echo'
alias now='date +"%F %T %Z"'
alias path='echo -e ${PATH//:/\\n}'
alias ports='netstat -tulanp'
alias reboot='shutdown -r'
alias update='sudo apt update'
alias upgrade='sudo apt upgrade'

# Use colorls if available
if type colorls > /dev/null; then
  alias lc='colorls --sd'
  alias lca='colorls -lA --sd'
fi

function themes {
  for item in $(ls $HOME/.cache/wal/colorschemes); do
    echo ${item%.*}
  done
}

function theme {
  if [ -f ~/.cache/wal/colorschemes/$1.json ]; then
    wal -f ~/.cache/wal/colorschemes/$1.json -o wal-update
  elif [ -f $1 ]; then
    wal -i $1 -o wal-update
  else
    echo "No color scheme or image file that matches argument."
  fi
}
