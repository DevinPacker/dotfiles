[module/filesystem]
type = internal/fs
mount-0 = /
interval = 15

# If displaying multiple mount points, replace icon with mountpoint token.
format-mounted = <label-mounted>
label-mounted = DISK: %used%/%total%

format-unmounted = <label-unmounted>
label-unmounted = %mountpoint%
label-unmounted-foreground = ${colors.color1}
